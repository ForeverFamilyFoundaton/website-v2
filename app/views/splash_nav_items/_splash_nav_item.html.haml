.splash-nav-item{ class: (splash_nav_item_counter % 2 == 0 ? :left : :right)}
  - if splash_nav_item.image.present?
    %a{ href: splash_nav_item.link}
      %img.img-fluid{ src: splash_nav_item.image(:thumbnail).url }
  .title
    %h2
      %a{ href: splash_nav_item.link}
        = splash_nav_item.title
  .body
    %p= splash_nav_item.body
  .clearfix
