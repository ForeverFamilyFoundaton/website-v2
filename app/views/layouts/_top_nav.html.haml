%a.navbar-brand{href: root_path}
  %span.logo
    = image_tag 'forever-family-foundation-logo.png'
  Forever Family Foundation
%button.navbar-toggler{"aria-controls" => "navbar", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbar", "data-toggle" => "collapse", type: "button"}
  %span.navbar-toggler-icon
#navbar.collapse.navbar-collapse
  %ul.navbar-nav.ml-auto
    %li.nav-item
      %a.nav-link{ href: '/pages/signs-of-life-radio', class: active_class('/pages/signs-of-life-radio')} Sign of Life Radio
    %li.nav-item
      %a.nav-link{ href: '/pages/mediumship', class: active_class('/pages/mediumship') } Mediumship
    %li.nav-item
      %a.nav-link{ href: '/pages/afterlife-science', class: active_class('/pages/afterlife-science') } Afterlife Science
    %li.nav-item
      %a.nav-link{ href: '/pages/grief-and-loss', class: active_class('/pages/grief-and-loss') } Grief & Loss
    %li.nav-item
      %a.nav-link{ href: '/pages/volunteers', class: active_class('/pages/volunteers') } Volunteers
    %li.nav-item
      %a.nav-link{ href: '/pages/upcoming-events', class: active_class('/pages/upcoming-events') } Events
    %li.nav-item
      %a.nav-link{ href: '/pages/about-us', class: active_class('/pages/about-us') } About Us
    - if user_signed_in?
      %li.nav-item
        %a.nav-link{ href: user_path(current_user), class: active_class(user_path(current_user)) }= fa_icon :user, class: :fas
      %li.nav-item
        = link_to destroy_user_session_path, method: :delete, class: 'nav-link' do
          = fa_icon 'sign-out-alt', class: :fas
      - if current_user.admin?
        %li.nav-item
          %a.nav-link{ href: admin_dashboard_path }
            = fa_icon 'cog', class: :fas
    - else
      %li.nav-item
        %a.become-a-member.btn.btn-sm.btn-warning{ href: new_user_registration_path } Become a member!
      %li.nav-item
        %a.nav-link.login{href: new_user_session_path, class: active_class(new_user_session_path)}
          = fa_icon('sign-in-alt', class: :fas)
